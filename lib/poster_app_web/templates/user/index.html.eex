<h1>Listing Users</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Role</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Follow</th>
        </tr>
    </thead>
    <tbody>
        <%= for user <- @users do %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.date_of_birth %></td>
            <td><%= user.role %></td>

            <td>
                <span><%= link "Show", to: Routes.user_path(@conn, :show, user) %></span>
            </td>
            <%= if @user_id == user.id || @user.role == "admin" do %>
                <td><span><%= link "Edit", to: Routes.user_path(@conn, :edit, user) %></span></td>
                <%= if user.role != "admin"do %>
                <td>
                    <span><%= link "Delete", to: Routes.user_path(@conn, :delete, user),
                    method: :delete, data: [confirm: "Are you sure?"] %></span>
                </td>
                <td></td>
                <% end %>
            <% end %>

            <%= if @user_id != user.id do %>
                <td></td>
                <td></td>
                <td>
                    <%= if user.id in @user.following do %>
                        <%= button "Unfollow", to: Routes.user_path(@conn, :unfollow, user), method: :patch %>
                    <% else %>
                        <%= button "Follow", to: Routes.user_path(@conn, :follow, user), method: :patch %>
                    <% end %>
                </td>
            <% end %>

        </tr>
        <% end %>
    </tbody>
</table>
